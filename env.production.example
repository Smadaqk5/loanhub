# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.netlify.app
NEXT_PUBLIC_APP_NAME=LoanHub Kenya
NEXT_PUBLIC_APP_DESCRIPTION=Secure Loan Lending Platform for Kenya

# Pesapal Payment Gateway (Production)
NEXT_PUBLIC_PESAPAL_BASE_URL=https://pay.pesapal.com/v3/api
NEXT_PUBLIC_PESAPAL_CONSUMER_KEY=your_production_consumer_key
PESAPAL_CONSUMER_SECRET=your_production_consumer_secret

# Database Configuration (if using external database)
DATABASE_URL=your_production_database_url

# Security
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=https://your-domain.netlify.app

# Email Configuration (if using email notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Analytics (optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_MAINTENANCE_MODE=false
